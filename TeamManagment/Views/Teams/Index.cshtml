@model TeamIndexModel
@{
    ViewBag.Title = "Index";
}

<h2>Teams</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Teams.First().Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Teams) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<h2>Available players</h2>
<p>
    @Html.ActionLink("Create New", "Create", "Players")
</p>
<table class="table">
    <tr>
        <th>
           Available Players
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var player in Model.AvailablePlayers)
    {
        <tr>
            <td>
                @player.FirstName
            </td>
            <td>
                @player.LastName
            </td>
            <td>@Html.ActionLink("Add team", "AddPlayerToTeam", new { id= player.ID })</td>
        </tr>
    }
</table>
